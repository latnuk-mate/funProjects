 
<h3> Your Stories <% var loggedUser = user %> </h3>
<% if(stories.length > 0){ %>
<% stories.forEach((story) => { %>
<div class="row">
   <div class="col s12 m7">
     <div class="card">
       <div class="card-image">
	<%- helper.EditIcon(story.user, loggedUser, story._id) %>
		<% console.log(story._id) %>
	</div>
       <div class="card-content center-align">
        <h5><%= story.title %></h5>
        <p><% let str =  helper.stripTag(story.text_body) %>
		<%= helper.truncateString(str,150) %>
	</p>
        <br>
        <div class="chip">
          <img src="<%= story.user.image %>" alt=""/>
       <a href="stories/user/<%=story.user._id %>"><%= story.user.displayName %>
	</a>
        </div>
       </div>
       <div class="card-action center-align">
         <a href="/stories/<%=story._id%>" class="btn red lighten-3">Read more</a>
       </div>
     </div>
   </div>
 </div>
<% }) } else{ %>
	<p> No Stories were created </p>

<% } %>
