 
<h3> Your Stories </h3>
<% if(stories){ %>
<% stories.forEach((story) => { %>
<div class="row">
   <div class="col s12 m4">
     <div class="card">
       <div class="card-image">
              <!-- card icon -->
       </div>
       <div class="card-content center-align">
        <h5><%= story.title %></h5>
        <p><%= story.body %></p>
        <br>
        <div class="chip">
          <img src="<%= story.user.image" alt="">
        <a href="stories/user/<%=story.user._id %>"><%= story.user.displayName %></a>
        </div>
       </div>
       <div class="card-action center-align">
         <a href="/stories/<%= story._id %>" class="btn red lighten-3">Read more</a>
       </div>
     </div>
   </div>
 </div>
<% }) } else{ %>
	<p> No Stories were created </p>

<% } %>
